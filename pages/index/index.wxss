/**index.wxss**/

/**去除滚动条**/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.headerGapClass{
  height: 20px;
  background: lightblue;
}

.headerClass {
  height: 50rpx;
  display: flex;
  background: #33ccff;
  color: white;
  width: 100%;
}

.mainScrollClass{
  border-top: solid 1px #000;
  width: 100%;
  white-space: nowrap;
}

.jobListClass {
  border-top: solid 1px #C0C0C0;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  height: 59px;
}

.jobBoxClass{
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 500rpx;
}

.headIconClass{
  display: inline-block;
  width: 100rpx;
  height: 100%;
}

.positionNameClass{
  display: block;
  font-size:30rpx;
  font-weight: bold;
  color: Black;
}

.positionCompanyClass{
  display: block;
  font-size:20rpx;  
  color: grey;   
}

.positionSalaryClass{
  display: block;
  position: relative;
  font-size:20rpx;
  color: grey;
}

.dateClass{
  font-size:20rpx;
  display:flex;
  align-items:center;
}